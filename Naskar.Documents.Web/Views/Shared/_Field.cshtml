
@using InputExtensions = Naskar.Architecture.Web.Extensions.InputExtensions
@model InputExtensions.PropertyModel
           
<div style="padding:5px; clear: both;">
    <div style="float: left;">
        <label for="@(Model.Name)">@(Html.Encode(Model.Label))</label>
        @(Model.Label.Length > 0 ? ":" : "" ) 
    </div>
    <div style="float: left;">
        @RenderSection("Input", true)
        <div id="@(Model.Id)-validation-message" class="validation-message">@(Html.ValidationMessage(Model.Name,"*") )</div>
    </div>
</div>